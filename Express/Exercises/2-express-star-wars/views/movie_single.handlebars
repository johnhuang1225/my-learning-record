{{#with movie}}

<div id="hero-image-single" style="background-image: url('/images/{{hero_image}}');">
  <h1 id="hero-title">{{../title}}</h1>
</div>

<div class="content-padding clearfix">

  <div class="poster-wrapper">
    <img src="/images/{{poster}}" class="img-responsive">
  </div>

  <div class="description-wrapper">

    <div class="description">
      <h2 class="movie-header">Description</h2>
      <p>{{description}}</p>
    </div>

    <div class="main-characters">
      <h2 class="movie-header">Main Characters</h2>
      <ul>
        {{#each ../main_characters}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>

  </div> {{!-- /description-wrapper --}}
</div> {{!-- /content-padding clearfix --}}

{{/with}}
